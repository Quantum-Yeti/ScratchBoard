/* === NoteCard Dark Theme === */

#NoteCard {
    background-color: #2a2a2a;
    border: 1px solid #3a3a3a;
    border-radius: 10px;
    padding: 10px;
    color: #f0f0f0;
    transition: all 0.2s ease-in-out;
}

#NoteCard:hover {
    border: 1px solid #0078d7;
    background-color: #333;
}

#NoteTitle {
    font-size: 15px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 4px;
}
